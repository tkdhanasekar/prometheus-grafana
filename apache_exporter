# systemctl status apache_exporter

# vim /etc/prometheus/prometheus.yml
- job_name: 'apache1'
    scrape_interval: 5s
    static_configs:
      - targets: ['apache_server_ip:9117']
      
# vim /etc/prometheus/rules/alert-rules.yml
- alert: ApacheDown
    expr: apache_up == 0
    for: 0m
    labels:
      severity: critical
    annotations:
      description: "Apache is down\n  VALUE = {{ $value }}"






