  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'prometheus_server'
    scrape_interval: 5s
    static_configs:
      - targets: ['172.104.163.169:9100']

  - job_name: 'otrs'
    scrape_interval: 5s
    static_configs:
      - targets: ['172.104.49.193:9100']

